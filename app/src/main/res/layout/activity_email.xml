<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".VoiceEmailActivity"
    android:orientation="vertical"
    android:id="@+id/a1">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

    <TableRow>
        <TextView
        android:id="@+id/lb_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" />

       <EditText
            android:id="@+id/txt_to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:inputType="textEmailAddress|textMultiLine"
           android:ems="12"/>
    </TableRow>

   <TableRow>
       <TextView
            android:id="@+id/lb_cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cc/Bcc:"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

       <EditText
           android:id="@+id/txt_cc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:inputType="textMultiLine"
           android:ems="10"/>
   </TableRow>
        <TableRow>
        <TextView
            android:id="@+id/lb_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject:"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <EditText
            android:id="@+id/txt_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:inputType="textEmailSubject|textMultiLine"
            android:ems="10" />
    </TableRow>

        <EditText
            android:id="@+id/txt_bdy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email body"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voice_btn"
        android:layout_marginTop="180dp"
        android:padding="0dp"
        android:src="@drawable/send_mail"/>

    </TableLayout>

</LinearLayout>
